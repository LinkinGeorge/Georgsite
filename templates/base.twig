{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}
	{% block body %}
		<body class="{{body_class}} fix-top-margin" data-template="base.twig">
	{% endblock %}
		{% include "includes/svg.twig" %}
		<header class="header">
			{% block nav %}
				<nav class="navbar navbar-fixed-top" role="navigation">
			{% endblock %}
			{% block header %}
				{% include "menu.twig" with {'menu': menu.get_items} %}
			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
		
		{% block end %}	
		{% endblock %}
	</body>
</html>
